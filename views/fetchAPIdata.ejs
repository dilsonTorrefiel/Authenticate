<%- include('partials/header') %>

<body>
  <!-- <div class="jumbotron"> -->
  <table class="table table-bordered  table-sm  table-striped table-ordered" style="width:100%">
    <thead>
      <tr>
        <th scope="col lead">Name</td>
        <th scope="col lead">Email</th>
        <th scope="col lead">Phone</th>
        <th style="width:  6%"  colspan="2" scope="col lead"><a class=" btn btn-primary" href="/fetchAddNew" role="button">add user</a></th>
      </tr>
    </thead>
    <tbody>
      <% newUser.forEach(function(e){ %>
        <tr>
          <td><%= e.name %></td>
          <td><%=e.email %></td>
          <td><%=e.phone %></td>
          <td>
            <form action="/update" method="post">
              <button name="update" class=" btn btn-primary-outline" value="<%=e._id %>" onCHange="this.form.submit()"><i class="fas fa-edit"></i></button>
            </form>
          </td>
          <td>
            <form action="/delete" method="post">
              <button name="delete" class=" btn btn-primary-outline" value="<%=e._id %>" onCHange="this.form.submit()"><i class="fas fa-trash-alt"></i></button>
            </form>
          </td>

        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="container">
    <!-- <h2>Pagination</h2> -->
    <ul class="pagination justify-content-center">
      <li class="page-item"><a class="page-link" href="#1">Prev</a></li>
      <li class="page-item"><a class="page-link" href="#2">1</a></li>
      <li class="page-item"><a class="page-link" href="#3">2</a></li>
      <li class="page-item"><a class="page-link" href="#4">3</a></li>
      <li class="page-item"><a class="page-link" href="#5">Next</a></li>
    </ul>
  </div>

</body>

<%- include('partials/footer') %>
